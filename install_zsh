#!/bin/sh

if [ -n "$1" ];then
	ssh -t $1 'if [ -f /bin/dnf -o -f /usr/bin/dnf ];then IST="dnf"; else if [ -f /bin/yum -o -f /usr/bin/yum ];then IST="yum"; else if [ -f /usr/apt-get -o -f /usr/bin/apt-get ];then IST="apt-get"; else echo "Error: package installer not found."; exit 1; fi; fi; fi; if [ ! -f /bin/git ];then sudo $IST -y update; sudo $IST -y install git git-extras; fi; if [ ! -f /bin/which -a ! -f /usr/bin/which ];then sudo \$IST -y install which; fi; if [ -d "./interim_installer" ]; then git-force-clone  https://github.com/Yougain/interim_installer.git ~/interim_installer; else git clone https://github.com/Yougain/interim_installer.git; fi; ./interim_installer/'${0##*/}'; exit $?'
	exit $?
fi


if [ -f /bin/zsh ];then
	echo "zsh installed. exit."
	exit 1
fi


APKG_R="redhat-rpm-config epel-release glibc-locale-source langpacks-en glibc-langpack-en"
if [ -f /bin/dnf -o -f /usr/bin/dnf ];then
	IST="dnf"
	DVP="devel"
	APKG="$APKG_R"
else
	if [ -f /bin/yum -o -f /usr/bin/yum ];then
		IST="yum"
		DVP="devel"
		APKG="$APKG_R"
	else
		if [ -f /usr/apt-get -o -f /usr/bin/apt-get ];then
	        IST="apt-get"
			DVP="dev"
		else
			echo "Error: package installer not found."
			exit 1
		fi
	fi
fi


if [ ! -f /bin/git -a ! -f /usr/bin/git ];then
	sudo $IST -y install git
fi

if [ ! -f /bin/which -a ! -f /usr/bin/which ];then
    sudo $IST -y install which
fi

sudo $IST -y update
sudo $IST -y upgrade


sudo $IST -y install vim cpio man ruby zsh make gcc ruby-$DVP git git-extras ncurses-$DVP $APKG
sudo gem install binding_of_caller curses
sudo gem install -N YkLib
git-force-clone  https://github.com/Yougain/interim_installer.git ~/interim_installer


sudo cp $HOME/interim_installer/lsr /usr/bin
sudo cp $HOME/interim_installer/lsp /usr/bin
sudo cp $HOME/interim_installer/zsh_rb /usr/bin
sudo cp $HOME/interim_installer/addline /usr/bin
sudo cp $HOME/interim_installer/usb_dev /usr/bin
sudo cp $HOME/interim_installer/untar /usr/bin

sudo cp $HOME/interim_installer/zshrc.local /etc
sudo cp $HOME/interim_installer/zprofile /etc
cat $HOME/interim_installer/.zshrc >> $HOME/interim_installer/.zshrc.new
mv -f $HOME/interim_installer/.zshrc{.new,}

function setup_home(){
	while (( "$#" )); do
		if [ "$1" != "/home/*" ]; then
			sudo cp $HOME/interim_installer/.vimrc $1
			sudo cp -r $HOME/interim_installer/.vim $1
			sudo cp $HOME/interim_installer/.zshrc $1
		fi
		shift
	done;
}

sudo update-alternatives --set editor /usr/bin/vim.basic

setup_home /etc/skel /root /home/*
sudo sed -i 's/bash/zsh/' /etc/passwd
sudo sed -i 's/SHELL=\/bin\/bash$/SHELL=\/bin\/zsh/' /etc/default/useradd


sudo addline /etc/zsh/zprofile <<END
for i in /etc/profile.d/*.sh ; do
	if [ "\$i" != "/etc/profile.d/bash_completion.sh" ]; then
    	[ -r \$i ] && source \$i
    fi
done
END

