#!/bin/bash

sudo dnf -y install ruby zsh make gcc ruby-devel git git-extras
sudo gem install YkLib binding_of_caller
git-force-clone  https://github.com/Yougain/interim_installer.git ~/interim_installer
sudo cp interim_installer/lsr /usr/bin
sudo cp interim_installer/rb_zsh /usr/bin
sudo cp interim_installer/zshrc.local /etc
sudo cp interim_installer/addline /usr/bin
sudo cp interim_installer/.vimrc /etc/skel
sudo cp -r interim_installer/.vim /etc/skel
sudo cp interim_installer/.vimrc ~/
sudo cp -r interim_installer/.vim ~/

